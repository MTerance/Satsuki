{
  "name": "ciel",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "main": "electron/main.cjs",
  "author": "Shomaa Azelkara",
  "description": "A simple Electron app with Vue 3 and Vite",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "web": "concurrently \"vite\" \"electron .\"",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "format": "prettier --write src/",
    "start": "npm run build && electron .",
    "dist": "electron-builder",
    "pack": "electron-packager . ciel --platform=win32 --arch=x64 --out=out --overwrite",
    "build-and-pack": "npm run build && npm run pack",
    "build-and-dist": "npm run build && electron-builder --publish=never"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.10",
    "@types/ws": "^8.18.1",
    "concurrently": "^9.2.0",
    "daisyui": "^5.0.43",
    "pinia": "^3.0.1",
    "socket.io-client": "^4.8.1",
    "sqlite3": "^5.1.7",
    "tailwindcss": "^4.1.10",
    "vue": "^3.5.13",
    "vue-router": "^4.5.0",
    "ws": "^8.18.2",
    "xmldom": "^0.6.0"
  },
  "devDependencies": {
    "@tsconfig/node22": "^22.0.1",
    "@types/node": "^22.14.0",
    "@vitejs/plugin-vue": "^5.2.3",
    "@vue/tsconfig": "^0.7.0",
    "electron": "^36.5.0",
    "electron-builder": "^26.0.12",
    "electron-packager": "^17.1.2",
    "npm-run-all2": "^7.0.2",
    "prettier": "3.5.3",
    "typescript": "~5.8.0",
    "vite": "^6.2.4",
    "vite-plugin-vue-devtools": "^7.7.2",
    "vue-tsc": "^2.2.8"
  },
  "build": {
    "appId": "com.satsuki.ciel",
    "productName": "Ciel",
    "directories": {
      "output": "dist-installer"
    },
    "files": [
      "electron/**/*",
      "dist/**/*",
      "package.json"
    ],
    "extraFiles": [
      "database.db"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "forceCodeSigning": false
    },
    "nsis": {
      "installerIcon": "public/favicon.ico",
      "uninstallerIcon": "public/favicon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
